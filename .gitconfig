[alias]
	branches = branch -a
	stashes = stash list
	remotes = remote -v
	uncommit = reset --mixed HEAD~
	unstage = restore --staged
	amend = commit -a --amend
	graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Creset√Ø %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
	nevermind = !git reset --hard HEAD && git clean -d -f
	remove = rm -r --cached
	overview = log --all --since='2 weeks' --oneline --no-merges
	today = log --since=00:00:00 --all --no-merges --oneline
	oops = reset HEAD^
	stats = shortlog -ns
